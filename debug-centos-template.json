{
  "variables": {
        "build_number": "{{timestamp}}"
  },

  "description": "Build base CentOS 7 x86_64",
  "provisioners": [
    {
      "type": "shell",
      "inline_shebang": "/usr/bin/bash -eux",
      "execute_command": "echo 'centos'|sudo -S -E bash '{{.Path}}'",
      "remote_path": "/tmp/debug-base-script.sh",
      "skip_clean": "true",
      "inline": [
        "yum install -y cloud-init",
        "yum -y clean all",
        "chmod +x /etc/rc.d/rc.local",
        "chmod +x /etc/rc.local",
        "touch /etc/rc.d/rc.local.vmimport",
        "chmod +x /etc/rc.d/rc.local.vmimport",
        "systemctl stop NetworkManager",
        "systemctl disable NetworkManager",
        "dd if=/dev/zero of=/EMPTY bs=1M",
        "rm -f /EMPTY",
        "sync",
        "sync"
      ]
    }
  ],

  "builders": [
    {
      "vm_name": "centos-7.2-{{user `build_number`}}",
      "type": "virtualbox-iso",

      "format": "ova",

      "guest_additions_mode":"disable",
      "guest_os_type": "Linux26_64",

      "output_directory": "output_packer",
      "http_directory": "http",


      "headless": false,
      "disk_size": 6000,

      "iso_url": "http://mirror.rackspace.com/CentOS/7.2.1511/isos/x86_64/CentOS-7-x86_64-Minimal-1511.iso",
      "iso_checksum": "f90e4d28fa377669b2db16cbcb451fcb9a89d2460e3645993e30e137ac37d284",
      "iso_checksum_type": "sha256",

      "ssh_username": "centos",
      "ssh_password": "centos",
      "ssh_port": 22,
      "ssh_wait_timeout": "5m",

      "shutdown_command": "echo 'centos'| sudo -S /sbin/poweroff",

      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debug-kickstart.cfg<enter>",
        "<wait10><wait10><wait10>","<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>","<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>","<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>","<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>","<wait10><wait10><wait10>",
        "<wait10><wait10><wait10>","<wait10><wait10><wait10>"
      ],

     "hard_drive_interface": "sata",
     "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "amazon-import",
      "region": "us-east-1",
      "s3_bucket_name": "kettlewell-images",
      "tags": {
      "Description": "packer amazon-import {{timestamp}}"
      },
      "skip_clean": "false"
    }
  ] 
}
